<?xml version="1.0" encoding="UTF-8"?>						<!-- Running class demo.TestNGGroupDemo3 example of All Class Tests tag to run all the class -->
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite1">
	<test thread-count="5" name="Test1">

		<groups>

			<run>
				<include name="AllClassTests"></include>	<!-- Group in the class level to run all group tests even tests without a group-->
			</run>

		</groups>

		<classes>
			<class name="demo.TestNGGroupDemo3" />
		</classes>
	</test> <!-- Test1 -->
</suite> <!-- Suite1 -->
